        result = x * y;
        System.out.println("x * y = " + result);
        result = x / y;
        System.out.println("x / y = " + result);
        result = x % y;
        System.out.println("x % y = " + result);
        System.out.println("Enter two numbers separated by the Enter key:");
        double first = scanner.nextDouble();

        double second = scanner.nextDouble();
        System.out.println("x + y = " + (first + second));
